<main role="main" class="container">
  <div class="row">
    <div class="col-12">
      <h1>TODO List</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <form class="form-inline" action="/tasks" method="POST">
        <div class="input-group w-100">
          <input id="task_description" type="text" name="description" placeholder="I have to..." class="form-control">
          <div class="input-group-append">
            <input type="button" value="Add" class="btn btn-primary" onclick="addTask()" />
          </div>
        </div>
      </form>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12" id="task_list">
      {{#each tasks}}
      <div class="card my-3" id={{ id }}>
        <div class="card-body">
          <p class="card-text">{{ description }}</p>



          <input id="{{id}}-toggle" type="button" value={{status}} class="btn btn-primary" onclick="toggle({{id}})" />
          <input type="button" value="Delete" class="btn btn-danger" onclick="deleteTask({{id}})" />





        </div>
      </div>
      {{/each}}
    </div>
  </div>
</main>